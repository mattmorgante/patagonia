<%= render 'layouts/header' %>

<div class="content-section-a">

  <div class="container">
      <div class="row">
          <div class="col-lg-5 col-sm-6">
              <hr class="section-heading-spacer">

              <div class="clearfix"></div>
              <% if flash.present? %>
                <div class="jumbotron4">
                  <% flash.each do |name, msg| -%>
                    <h4><%= content_tag :div, msg, class: name %></h4>
                  <% end %>
                </div>
              <% end %>

             <h2> Sign Up </h2>
             <p class="lead"> Unfortunately, Patagonia On A Budget is not available yet. If you want to be notified when the book is published, sign up here.</p>


             	<%= form_for @subscriber do |f| %>
	           		<%= f.text_field :name, placeholder: "Name", class: 'form-control' %>
	           		<br>
	           		<%= f.email_field :email, placeholder: "Email", class: 'form-control' %>
	          		<br>
	          		<%= f.select :source, ["Search Engine", "Social Media", "Word of Mouth", "Other"], prompt: "How did you hear about us?", class: 'form-control' %>
	         			<br>
	         			<br>
	           		<%= f.submit "Sign Up" %>
	            <% end %>
           		
           		<p class="lead">In the meantime, please check out <%= link_to "Our Blog", "articles/index" %> for all the latest news and traveling advice!</p>
           
          </div>
          <br>

          <div class="col-lg-5 col-lg-offset-1 col-sm-6">
              <img class="img-responsive" src="/assets/cover.jpg" alt="ebook cover">
          </div>
      </div>

  </div>
  <!-- /.container -->

</div>
<!-- /.content-section-a -->
<%= render 'layouts/footer' %>

