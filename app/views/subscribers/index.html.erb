<%= render 'layouts/header' %>

<div class="content-section-a">

  <div class="container">
      <div class="row">
          <div class="col-lg-6 col-sm-6">
              <hr class="section-heading-spacer">
              <div class="clearfix"></div>
             	<h2> Sign up </h2>
             <p class="lead"> Unfortunately, Patagonia On A Budget is not available yet. If you want to be notified when the book is published, sign up here. In the meantime, please check out <%= link_to "Our Blog", pages_path %> for all the latest news and traveling advice!</p>

             <%= form_for @subscriber do |f| %>
             	<%= f.text_field :name, placeholder: "Name" %>
             	<%= f.email_field :email, placeholder: "Email" %>
             	<%= f.select :source, ["Search Engine", "Social Media", "Word of Mouth", "Other"], prompt: "How did you hear about us?" %>
             	<%= f.submit "Sign Up" %>
             <% end %>

           
          </div>
          <br>

          <div class="col-lg-5 col-lg-offset-1 col-sm-6">
              <img class="img-responsive" src="/assets/cover.jpg" alt="ebook cover">
          </div>
      </div>

  </div>
  <!-- /.container -->

</div>
<!-- /.content-section-a -->
